@{
    ViewData["Title"] = "Historial Médico - VitaLink";
}

<main class="Historial-Medico">

    <section class="Historial-Header">
        <h2>Historial Médico</h2>
    </section>

    <!-- ===================== ENFERMEDADES ===================== -->
    <section class="Historial-Seccion">
        <h3>Enfermedades</h3>
        @if (ViewBag.Diagnosticos != null && ViewBag.Diagnosticos.Count > 0)
        {
            <div class="Historial-Grid">
                @foreach (var enf in ViewBag.Diagnosticos)
                {
                    <div class="Historial-Item">
                        <div class="Historial-Item-Content">
                            <span class="Historial-Item-Texto">@enf.NombrePatologia</span>
                            <span class="Historial-Item-Fecha">@(enf.FechaInicio?.ToString("dd MMM, yyyy") ?? "")</span>
                        </div>
                        <button class="btn-vermas" 
                                data-tipo="enfermedad" 
                                data-id="@enf.Id"
                                data-nombre="@enf.NombrePatologia"
                                data-descripcion="@enf.Descripcion"
                                data-fechainicio="@(enf.FechaInicio?.ToString("dd/MM/yyyy") ?? "")"
                                data-fechafin="@(enf.FechaFin?.ToString("dd/MM/yyyy") ?? "")"
                                data-estado="@enf.Estado"
                                onclick="verMasHistorial(this)">Ver Mas</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="Historial-Vacio">No hay enfermedades registradas.</p>
        }
    </section>

    <!-- ===================== DIAGNÓSTICOS ===================== -->
    <section class="Historial-Seccion">
        <h3>Diagnósticos</h3>
        @if (ViewBag.Diagnosticos != null && ViewBag.Diagnosticos.Count > 0)
        {
            <div class="Historial-Grid">
                @foreach (var diag in ViewBag.Diagnosticos)
                {
                    <div class="Historial-Item">
                        <div class="Historial-Item-Content">
                            <span class="Historial-Item-Texto">@diag.NombrePatologia</span>
                            <span class="Historial-Item-Fecha">@(diag.FechaInicio?.ToString("dd MMM, yyyy") ?? "")</span>
                        </div>
                        <button class="btn-vermas" 
                                data-tipo="diagnostico" 
                                data-id="@diag.Id"
                                data-nombre="@diag.NombrePatologia"
                                data-descripcion="@diag.Descripcion"
                                data-fechainicio="@(diag.FechaInicio?.ToString("dd/MM/yyyy") ?? "")"
                                data-fechafin="@(diag.FechaFin?.ToString("dd/MM/yyyy") ?? "")"
                                data-estado="@diag.Estado"
                                onclick="verMasHistorial(this)">Ver Mas</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="Historial-Vacio">No hay diagnósticos disponibles.</p>
        }
    </section>

    <!-- ===================== ESTUDIOS / INFORMES ===================== -->
    <section class="Historial-Seccion">
        <h3>Estudios/Informes</h3>
        @if (ViewBag.Documentos != null && ViewBag.Documentos.Count > 0)
        {
            <div class="Historial-Grid">
                @foreach (var doc in ViewBag.Documentos)
                {
                    <div class="Historial-Item">
                        <div class="Historial-Item-Content">
                            <span class="Historial-Item-Texto">@doc.NombreArchivo</span>
                            <span class="Historial-Item-Fecha">@(doc.Fecha?.ToString("dd MMM, yyyy") ?? "")</span>
                        </div>
                        <button class="btn-vermas" 
                                data-tipo="documento" 
                                data-id="@doc.Id"
                                data-nombre="@doc.NombreArchivo"
                                data-titulo="@doc.Titulo"
                                data-fecha="@(doc.Fecha?.ToString("dd/MM/yyyy") ?? "")"
                                data-tipoarchivo="@doc.TipoArchivo"
                                data-idarchivo="@doc.IdArchivo"
                                onclick="verMasHistorial(this)">Ver Mas</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="Historial-Vacio">No hay estudios o informes disponibles.</p>
        }
    </section>

    <!-- ===================== VACUNACIONES ===================== -->
    <section class="Historial-Seccion">
        <h3>Vacunaciones</h3>
        @if (ViewBag.Vacunas != null && ViewBag.Vacunas.Count > 0)
        {
            <div class="Historial-Grid">
                @foreach (var vac in ViewBag.Vacunas)
                {
                    <div class="Historial-Item">
                        <div class="Historial-Item-Content">
                            <span class="Historial-Item-Texto">@vac.NombreVacuna</span>
                            <span class="Historial-Item-Fecha">@(vac.FechaAplicacion?.ToString("dd MMM, yyyy") ?? "")</span>
                        </div>
                        <button class="btn-vermas" 
                                data-tipo="vacuna" 
                                data-id="@vac.Id"
                                data-nombre="@vac.NombreVacuna"
                                data-dosis="@vac.Dosis"
                                data-aplicacion="@vac.Aplicacion"
                                data-fecha="@(vac.FechaAplicacion?.ToString("dd/MM/yyyy") ?? "")"
                                onclick="verMasHistorial(this)">Ver Mas</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="Historial-Vacio">No hay vacunas registradas.</p>
        }
    </section>

    <!-- ===================== ANTECEDENTES FAMILIARES ===================== -->
    <section class="Historial-Seccion">
        <h3>Antecedentes Familiares</h3>
        @if (ViewBag.AntecedentesFamiliares != null && ViewBag.AntecedentesFamiliares.Count > 0)
        {
            <div class="Historial-Grid">
                @foreach (var ant in ViewBag.AntecedentesFamiliares)
                {
                    <div class="Historial-Item">
                        <div class="Historial-Item-Content">
                            <span class="Historial-Item-Texto">@(ant?.ToString() ?? "Sin especificar")</span>
                            <span class="Historial-Item-Fecha">@DateTime.Now.ToString("dd MMM, yyyy")</span>
                        </div>
                        <button class="btn-vermas">Ver Mas</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="Historial-Vacio">No hay antecedentes familiares cargados.</p>
        }
    </section>

    <!-- ===================== AGREGAR BOTONES DE AGREGAR ===================== -->
    <section class="botones-agregar">
        <a href="@Url.Action("AgregarManualmente", "Home")" class="btn-agregar-manual">Agregar Manualmente</a>
        <a href="@Url.Action("AgregarAutomaticamente", "Home")" class="btn-agregar-auto">Agregar Automáticamente</a>
    </section>

</main>

<!-- ===================== MODAL DETALLES ===================== -->
<div id="modal-detalles" class="modal-overlay-historial">
    <div class="modal-content-historial">
        <div class="modal-header-historial">
            <h3 id="modal-titulo">Detalles</h3>
            <button class="modal-close-historial" onclick="cerrarModalDetalles()">&times;</button>
        </div>
        <div class="modal-body-historial" id="modal-body">
            <!-- Contenido dinámico -->
        </div>
        <div class="modal-footer-historial" id="modal-footer">
            <!-- Botones de acción (descargar PDF, etc.) -->
        </div>
    </div>
</div>





