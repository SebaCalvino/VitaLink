<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vitalink</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
      <nav class="navbar">
            <div class="logo">
            <img src="/Img/LogIn/LogoVitaLink.png" alt="VitaLink Logo">
            </div>
            <ul class="nav-links">
                @{
                    bool tieneSesion = Context.Session.GetInt32("IdUsuario").HasValue;
                    string linkInicio = tieneSesion ? "/Home/Home" : "/Home/Index";
                }
                <li><a href="@linkInicio">Inicio</a></li>
                <li><a href="/Home/Calendario">Calendario</a></li>
                <li><a href="/Home/Familia">Familia</a></li>
                <li><a href="/Home/HistorialMedico">Historial Médico</a></li>
                <li><a href="/Home/Medicamentos">Medicamentos</a></li>
                <li><a href="/Home/Perfil">Perfil</a></li>
                @if (!tieneSesion)
                {
                    <li><a href="/Home/LogIn">Iniciar Sesión</a></li>
                }
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>
   
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
