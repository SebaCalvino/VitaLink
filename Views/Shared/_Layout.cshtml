<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
      <nav class="navbar">
            <div class="logo">
            <img src="/Img/">
            </div>
            <ul class="nav-links">
                <li><a href="/Home/Index">Inicio</a></li>
                <li><a href="/Home/Calendario">Calendario</a></li>
                <li><a href="/Home/Crianzas">Crianza</a></li>
                <li><a href="/Home/HistorialMedico">Historial Médico</a></li>
                <li><a href="/Home/Medicamentos">Medicamentos</a></li>
                <li><a href="/Home/Perfil">Perfil</a></li>
                <li><a href="/Home/LogIn">Iniciar Sesión</a></li>
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - NombreProyecto
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
